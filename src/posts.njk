---
title: Blog
description: Latest blog posts
layout: default
permalink: /posts/
eleventyNavigation:
  key: Posts
  order: 2
---
<div class="px-4 py-12 my-4 bg-white sm:px-6 lg:py-16 lg:px-8">
  <div class="container mx-auto max-w-7xl">
    <!-- header -->
    <header class="text-center">
      <h2
        class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        {{ title }}
      </h2>
      <p class="max-w-2xl mx-auto mt-3 text-xl text-gray-500 sm:mt-4">
        {{ description }}
      </p>
    </header>

    <div class="grid max-w-lg gap-5 mx-auto mt-12 lg:grid-cols-3 lg:max-w-none">
      {% for post in collections.posts %}
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-xl">
          <div class="flex-shrink-0">
            <!-- Generate responsive image from shortcoe -->
            {% imageCover post.data.image, post.data.image_alt %}
          </div>
          <div class="flex flex-col justify-between flex-1 p-6 bg-white">
            <div class="flex-1">
              <p class="text-sm font-medium text-indigo-600">{{ post.data.category | capitalize }}</p>
              <div class="flex space-x-1 text-sm text-gray-500">
                {# <time datetime="2020-03-16">
                  {{ post.date | postDate }}
                </time> #}
              </div>
              <a href="{{ post.url }}" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900">
                  {{ post.data.title | safe }}
                </p>
                <p class="mt-3 text-base text-gray-500">
                  {{ post.data.description | safe }}
                </p>
              </a>
              <div class="mt-3">
                <a
                  href="{{ post.url }}"
                  class="font-semibold text-indigo-600 hover:text-indigo-500"
                  >Read full story</a
                >
              </div>
            </div>
          </div>
        </div>
      {% endfor %} 
    </div>
    
  </div>
</div>


